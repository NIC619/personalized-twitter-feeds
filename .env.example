# Twitter API v2 Credentials (OAuth 1.0a User Context)
# From Twitter Developer Portal > Your App > Keys and Tokens
TWITTER_API_KEY=your_consumer_key          # "Consumer Key" under OAuth 1.0 Keys
TWITTER_API_SECRET=your_consumer_secret    # "Consumer Secret" (shown when regenerating Consumer Key)
TWITTER_ACCESS_TOKEN=your_access_token     # "Access Token" (click Generate)
TWITTER_ACCESS_SECRET=your_access_secret   # "Access Token Secret" (shown with Access Token)
TWITTER_BEARER_TOKEN=your_bearer_token     # "Bearer Token" under App-Only Authentication

# Anthropic API
ANTHROPIC_API_KEY=your_claude_api_key

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_anon_key

# Configuration
FETCH_HOURS=24
MAX_TWEETS=100
FILTER_THRESHOLD=70
FAVORITE_THRESHOLD_OFFSET=20   # Starred authors: threshold - offset (e.g. 70-20=50)
MUTED_THRESHOLD_OFFSET=15      # Muted authors: threshold + offset (e.g. 70+15=85)
SCHEDULE_HOUR=9
SCHEDULE_TIMEZONE=Asia/Taipei

# Optional: Embedding service (Phase 2)
# VOYAGE_API_KEY=your_voyage_key
